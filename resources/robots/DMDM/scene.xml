<mujoco model="go2 scene">
  <include file="go2rod.xml" />

  <statistic center="0.75 0.75 0.7" extent="0.6" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.1 0.1 0.1 1" />
    <global azimuth="225" elevation="-20" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.1 0.1 0.1" rgb2="0.15 0.15 0.15" width="512"
      height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.1 0.1 0.1"
      rgb2="0.1 0.1 0.1"
      markrgb="0.8 0.8 0.8" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
      reflectance="0.2" />
    <material name="blue_material" rgba="0 0 1 1" />
    <material name="yellow_material" rgba="1 1 0 1" />
    <material name="orange_material" rgba="1 0.5 0 1" />
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" />
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />

    <body name="target" pos="1.2 -0.2 0.6">
      <!-- Virtual target sphere -->
      <geom type="sphere" size="0.02" material="orange_material" />

